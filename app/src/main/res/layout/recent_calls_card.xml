<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/callDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="38dp"
        android:text="25s"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/callType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/call_made"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/callDuration"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9876543210"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_above="@+id/date_time_textView"
        android:layout_toEndOf="@+id/callType"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/date_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:13"
        android:layout_alignBaseline="@+id/callDuration"
        android:layout_alignBottom="@+id/callDuration"
        android:layout_alignStart="@+id/numberTextView" />
</RelativeLayout>