<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="1dp"
    android:background="#ffffff"
    android:paddingLeft="5dp"
    android:clickable="true"
    android:elevation="13dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="qwerty2">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:paddingTop="2dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageButton21"
            android:layout_marginBottom="10dp"
            android:text="Naam Mera"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/textView6"
            android:text="Waqt pahle"
            android:layout_marginLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15dp"

            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/call"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Yeh ek message hai !! "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp"
        android:layout_below="@+id/call_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="9985587"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/text_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/call_type"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:layout_alignTop="@+id/call"
        android:layout_toRightOf="@+id/text_layout"
        android:layout_toEndOf="@+id/text_layout"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />


</RelativeLayout>
